{
  "compilerOptions": {
    "target": "ES2020", // Specify the target ECMAScript version
    "module": "CommonJS", // Use CommonJS for Node.js
    "rootDir": "./src", // Root directory for TypeScript files
    "outDir": "./dist", // Output directory for compiled files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable interop between CommonJS and ES Modules
    "moduleResolution": "node", // Resolve modules in a Node.js fashion
    "skipLibCheck": true, // Skip type checks for node_modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "resolveJsonModule": true // Allow importing JSON modules
  },
  "include": ["src"], // Specify files to include in the compilation
  "exclude": ["node_modules"] // Exclude unnecessary files
}